<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oldpasswordtextview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="原密码"
            android:textSize="15dp"
            android:textColor="@color/passwordtext"/>

        <EditText
            android:id="@+id/oldpasswordedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="填写原四位数字密码"
            android:inputType="numberPassword"
            android:textSize="10dp"
            android:maxLength="4"
            android:focusedByDefault="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newpasswordtextview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新密码"
            android:textSize="15dp"
            android:textColor="@color/passwordtext"/>

        <EditText
            android:id="@+id/newpasswordedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="填写新四位数字密码"
            android:inputType="numberPassword"
            android:textSize="10dp"
            android:maxLength="4"
            android:focusedByDefault="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/surepasswordtv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认新密码"
            android:textSize="15dp"
            android:lines="2"
            android:textColor="@color/passwordtext"/>

        <EditText
            android:id="@+id/surepasswordedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="确认新四位数字密码"
            android:inputType="numberPassword"
            android:textSize="10dp"
            android:maxLength="4" />
    </LinearLayout>

</LinearLayout>