<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:elevation="1dp"

    android:background="@color/colorAccent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <EditText
           android:id="@+id/secret_title"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/secret_guideline"
           android:layout_marginTop="17dp"
           android:layout_marginStart="15dp"
           android:hint="请输入你的标题"
           android:textColorHint="@color/text_hint_color"
           android:textSize="16dp"
           android:textColor="@color/head_item_title"
           android:background="@null"
           android:imeOptions="actionNext"
           android:singleLine="true"
           android:nextFocusForward="@id/secret_user"/>
        <android.support.constraint.Guideline
            android:id="@+id/secret_guideline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintGuide_end="80dp"
            android:orientation="vertical"/>
        <ImageView
            android:id="@+id/secret_confirm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/item_confirm"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/secret_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/item_delete"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="52dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/secret_line"
            app:layout_constraintWidth_default="wrap"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FFD0E9DA"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/secret_title"
            />
        <ImageView
            android:id="@+id/secret_user_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/user_icon"
            android:layout_marginTop="22dp"
            app:layout_constraintLeft_toLeftOf="@+id/secret_title"
            app:layout_constraintTop_toBottomOf="@+id/secret_line" />
        <ImageView
            android:id="@+id/secret_password_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/password_icon"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/secret_user_icon"
            app:layout_constraintTop_toBottomOf="@+id/secret_user_icon"/>
        <ImageView
            android:id="@+id/secret_label_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/label_icon"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/secret_password_icon"
            app:layout_constraintTop_toBottomOf="@id/secret_password_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="26dp"/>
        <EditText
            android:id="@+id/secret_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="wrap"
            android:hint="请输入你的账户id"
            android:textSize="14dp"
            android:textColor="@color/head_item_title"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:background="@null"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/secret_password"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@+id/secret_user_icon"
            app:layout_constraintBottom_toBottomOf="@+id/secret_user_icon"
            app:layout_constraintLeft_toRightOf="@+id/secret_user_icon"
            app:layout_constraintRight_toLeftOf="@+id/secret_copy_user"/>
     <android.support.design.widget.TextInputLayout
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginLeft="10dp"
         app:passwordToggleEnabled="true"
         app:hintEnabled="false"
         app:layout_constraintHeight_default="wrap"
         app:layout_constraintTop_toTopOf="@+id/secret_password_icon"
         app:layout_constraintBottom_toBottomOf="@+id/secret_password_icon"
         app:layout_constraintLeft_toRightOf="@+id/secret_password_icon"
         app:layout_constraintRight_toLeftOf="@+id/secret_copy_password">

      <EditText
          android:id="@+id/secret_password"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="请输入你的密码"
          android:textSize="14dp"
          android:textColor="@color/head_item_title"
          android:textColorHint="@color/text_hint_color"
          android:inputType="textPassword"
          android:background="@null"
          android:imeOptions="actionNext"
          android:nextFocusForward="@id/secret_label"
          android:singleLine="true"
          />
     </android.support.design.widget.TextInputLayout>
        <EditText
            android:id="@+id/secret_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="添加标签"
            android:textSize="14dp"
            android:textColor="@color/head_item_title"
            android:textColorHint="@color/text_hint_color"
            android:layout_marginLeft="10dp"
            android:background="@null"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintTop_toTopOf="@+id/secret_label_icon"
            app:layout_constraintBottom_toBottomOf="@+id/secret_label_icon"
            app:layout_constraintLeft_toRightOf="@+id/secret_label_icon"
            app:layout_constraintRight_toLeftOf="@+id/secret_time"
            />
        <ImageView
            android:id="@+id/secret_copy_user"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/copy_icon"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="@+id/secret_user_icon"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/secret_copy_password"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/copy_icon"
            app:layout_constraintTop_toTopOf="@+id/secret_password_icon"
            app:layout_constraintRight_toRightOf="@+id/secret_copy_user"
            />
        <TextView
            android:id="@+id/secret_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2018-09-01"
            android:textColor="@color/secret_time"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@+id/secret_copy_password"
            app:layout_constraintTop_toBottomOf="@+id/secret_copy_password"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
