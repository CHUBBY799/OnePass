<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/head_search_icon"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/search_icon"/>
        <ImageView
            android:id="@+id/head_setting"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/setting_icon"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/head_label"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/head_setting"
            android:layout_alignTop="@+id/head_setting"
            android:src="@mipmap/label_icon"/>
        <ImageView
            android:id="@+id/head_add"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/head_label"
            android:layout_alignTop="@id/head_label"
            android:layout_marginRight="10dp"
            android:src="@mipmap/add_icon"/>
        <EditText
            android:id="@+id/head_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/line"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/head_search_icon"/>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="11"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout> 