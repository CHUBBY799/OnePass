<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/title_bg">
            <ImageView
                android:id="@+id/head_search_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/head_search"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/head_setting"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/head_setting"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                />
            <TextView
                android:id="@+id/search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_cancel"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="11dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/head_label"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/head_setting"
                android:layout_alignTop="@id/head_setting"
                android:layout_marginRight="15dp"
                android:src="@mipmap/head_label"/>
            <ImageView
                android:id="@+id/head_home"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/head_label"
                android:layout_alignTop="@id/head_label"
                android:layout_marginRight="15dp"
                android:src="@mipmap/home_icon"/>
            <EditText
                android:id="@+id/head_search"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_edittext"
                android:layout_toRightOf="@+id/head_search_icon"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:maxLines="1" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/head_fragment"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/main_background">
        </LinearLayout>

    </LinearLayout>
</FrameLayout>