<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="Settings"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/backimagview"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/close_icon_white" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windowBackground"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:text="@string/setting_tag"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/secure_lock"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@color/colorAccent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secure_lock_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:gravity="center_vertical"
                            android:text="@string/secure_lock"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <Switch
                            android:id="@+id/secure_lock_switch"
                            android:layout_width="50dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:checked="false"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/label_line_color" />

                    <RelativeLayout
                        android:id="@+id/secure_clear"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secure_clear_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:gravity="center_vertical"
                            android:text="@string/secure_clear"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <Switch
                            android:id="@+id/secure_clear_switch"
                            android:layout_width="50dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/label_line_color" />

                    <RelativeLayout
                        android:id="@+id/secure_fingerprintsatrt"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secure_fingerprintsatrt_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:gravity="center_vertical"
                            android:text="@string/secure_fingerprintsatrt"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <Switch
                            android:id="@+id/secure_fingerprintsatrt_switch"
                            android:layout_width="50dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/label_line_color" />

                    <RelativeLayout
                        android:id="@+id/secure_floatwindowstart"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secure_floatwindowstart_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:text="@string/secure_floatwindowstart"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"/>
                        <Switch
                            android:id="@+id/secure_floatwindowstart_switch"
                            android:layout_width="50dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/label_line_color" />

                    <RelativeLayout
                        android:id="@+id/secure_passwordupdate"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secure_passwordupdate_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:text="@string/secure_passwordupdate"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <ImageView
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:src="@mipmap/more_setting_icon"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:text="@string/data_title"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="vertical" >
                <RelativeLayout
                    android:id="@+id/data_excel"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="5dip"
                        android:text="@string/data_excel"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dip"
                        android:src="@mipmap/more_setting_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/data_backup"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="5dip"
                        android:text="@string/data_backup"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dip"
                        android:src="@mipmap/more_setting_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/data_retore"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="5dip"
                        android:text="@string/data_store"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dip"
                        android:src="@mipmap/more_setting_icon"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
