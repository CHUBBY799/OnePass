<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/search"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/tan"
        app:layout_constraintTop_toTopOf="@+id/tan"
        android:visibility="gone"
        android:src="@mipmap/search_icon"/>
    <EditText
        android:id="@+id/datatext"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintLeft_toLeftOf="@id/search"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/tan"
        android:text="hello"
        android:textSize="50dp"/>
    <ImageView
        android:id="@+id/tan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/view_more_icon"
        android:text="tan"/>
</android.support.constraint.ConstraintLayout>
