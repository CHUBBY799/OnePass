<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/suspend_add_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/text_hint_color"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/suspend_add_title"
        android:layout_width="wrap_content"
        app:layout_constraintHeight_default="wrap"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/suspend_add_title_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/suspend_add_line"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFD0E9DA"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/suspend_add_title_icon"
        />
    <ImageView
        android:id="@+id/suspend_add_user_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/user_icon"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_line"
        app:layout_constraintStart_toStartOf="@id/suspend_add_title_icon"/>
    <EditText
        android:id="@+id/suspend_add_user"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="0dp"
        android:textSize="12sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="@id/suspend_add_title"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_user_icon"/>
    <View
        android:id="@+id/suspend_add_line2"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFD0E9DA"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/suspend_add_user_icon"
        />
    <ImageView
        android:id="@+id/suspend_add_password_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/password_icon"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_line2"
        app:layout_constraintStart_toStartOf="@id/suspend_add_user_icon"/>
    <EditText
        android:id="@+id/suspend_add_password"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="wrap"
        android:textSize="12sp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="@id/suspend_add_user"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_password_icon" />
    <View
        android:id="@+id/suspend_add_line3"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFD0E9DA"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/suspend_add_password_icon"
        />
    <Button
        android:id="@+id/suspend_add_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:textSize="12sp"
        android:padding="0dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_line3"
        app:layout_constraintStart_toStartOf="@id/suspend_add_password_icon"/>
    <Button
        android:id="@+id/suspend_add_cacel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textSize="12sp"
        android:padding="0dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="@+id/suspend_add_line3"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>