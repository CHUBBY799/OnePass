<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <View
        android:id="@+id/secret_label_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/label_line_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_bg"
        android:textSize="16sp"
        android:text="Title"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/secret_label_line"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageButton
        android:id="@+id/label_delete"
        android:layout_width="45dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="spread"
        android:background="@color/label_title_edit"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@id/secret_label_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/item_delete"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>

